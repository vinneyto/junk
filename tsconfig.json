{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2018",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react",
    "lib": ["dom", "es2018"],
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true
  },
  "exclude": ["node_modules", "./dist/**"]
}
